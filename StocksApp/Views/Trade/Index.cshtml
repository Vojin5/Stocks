@model StockTrade
@{
    ViewBag.Title = "Stocks";
}
@section Page
{
    <div class="dimmGray-text big-font">@Model.StockName</div>
}
@section Links
{
    <link rel="stylesheet" href="~/Style/Trade/Index.css" asp-append-version="true" />
}


<form method="post">
    <div class="stock-card-container">

        <div class="stock-card">

            <div>
                <span class="blue-text big-font">@Model.StockName</span>
                <input type="hidden" name="StockName" value="@Model.StockName"/>
                <span class="blue-text big-font" >(@Model.StockSymbol)</span>
                <input type="hidden" name="StockSymbol" value="@Model.StockSymbol" />
            </div> 

            <div>
                <span class="dimmGray-text header-font">$</span>
                <span class="stockPrice-font" id="StockPrice">@Model.Price</span>
                <input type="hidden" name="Price" value="@Model.Price" />
            </div>
            <div id="StockSymbol" class="hidden">@Model.StockSymbol</div>
        </div>

        <div class="order-container">
            <span class="big-font dimmGray-text">New Order</span>
            <label asp-for="Quantity" class="medium-font">Quantity</label>
            <input asp-for="Quantity"/>
            <span asp-validation-for="Quantity" class="red-text"></span>
            <div class="buttons-container">
                <button class="trade-button red-back" asp-controller="trade" asp-action="sellOrder" ><i class="fa-solid fa-arrow-down"></i> Sell</button>
                <button class="trade-button green-back" asp-controller="trade" asp-action="buyOrder" ><i class="fa-solid fa-arrow-up"></i> Buy</button>
            </div>
        </div>
    </div>
</form>



<div class="error-container">
    @if(ViewBag.Errors != null)
    {
        @foreach(string error in ViewBag.Errors)
        {
            <div class="error-item">
                @error
            </div>
        }
    }
</div>

